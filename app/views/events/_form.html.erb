<%=form_with(model: event, local: true) do |f| %>
<div class="mb-3">
  <%=f.label :name, "name" ,:class =>"form-label"%>
  <%=f.text_field :name ,:class=>"form-control" %>
</div>
<div class="mb-3">

  <%=f.label :lacation,"lacation" ,:class =>"form-label"%>
  <%=f.text_field :lacation, :class=>"form-control"%>
  </div>

<div class="mb-3">

  <%=f.label :event_date,"event_date" ,:class =>"form-label"%>
  <%=f.date_field :event_date, :class=>"form-control"%>
  </div>

<div class="mb-3">
  <%=f.submit "Submit" ,:class=>"btn btn-primary btn-lg" %>
  <%=link_to  "cancle", events_path, :class=>"btn btn-danger btn-lg"%>

</div>


<%end%>

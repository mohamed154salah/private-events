<div class="container">

<h1>upcoming Events</h1>
<% @events.upcoming.each do | event|%>
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title"> <%= event.name %></h5>
    <p class="card-text">Location : <%= event.lacation %></p>
   <%= link_to "Show", event_path(event), class: "btn btn-primary"%>
  </div>
</div>
<%end %>
</div>

<div class="container">

<h1>Past Events</h1>
<% @events.past.each do | event|%>
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title"> <%= event.name %></h5>
    <p class="card-text">Location : <%= event.lacation %></p>
   <%= link_to "Show", event_path(event), class: "btn btn-primary"%>
  </div>
</div>
<%end %>
</div>
